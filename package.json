{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "git clean --force -dX",
    "commit": "git-cz",
    "doc": "lerna run doc && all-contributors generate",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{ts,tsx,js,json,yml,md}\"",
    "lint": "eslint --ignore-path .gitignore \"**/*.{ts,tsx,js}\"",
    "postinstall": "lerna bootstrap",
    "publish": "lerna publish from-git --contents pkg --yes",
    "release": "dotenv -- lerna version --create-release github",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@commitlint/prompt": "^8.2.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.8.1",
    "@pika/plugin-build-web": "^0.8.1",
    "@pika/plugin-ts-standard-pkg": "^0.8.1",
    "@testing-library/react": "^9.1.4",
    "@testing-library/react-hooks": "^3.1.0",
    "@types/jest": "^24.0.24",
    "@types/react": "^16.9.11",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "all-contributors-cli": "^6.9.1",
    "commitizen": "^4.0.3",
    "documentation": "^12.1.2",
    "dotenv-cli": "^3.0.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-typescript": "^6.1.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.0",
    "eslint-plugin-jsdoc": "^20.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "eslint-plugin-testing-library": "^1.3.0",
    "husky": "^4.0.0",
    "jest": "^24.9.0",
    "lerna": "^3.17.0",
    "lint-staged": "^10.0.0",
    "prettier": "^1.19.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-test-renderer": "^16.10.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  }
}
